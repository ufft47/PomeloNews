<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:rowCount="2"
    android:columnCount="5"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_marginBottom="15dp">

    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/iv_icon_fragment_fourth_connect"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginRight="40dp"/>
    <RelativeLayout
        android:layout_toRightOf="@id/iv_icon_fragment_fourth_connect"
        android:id="@+id/relativelayout_fragment_fourth_connect"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_tel_fragment_fourth_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#6B6B6B" />
        <TextView
            android:id="@+id/tv_mobile_fragment_fourth_connect"
            android:layout_below="@id/tv_tel_fragment_fourth_connect"
            android:layout_alignLeft="@id/tv_tel_fragment_fourth_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6B6B6B"
            android:textSize="13sp"/>
    </RelativeLayout>

    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/iv_msg_fragment_fourth_connect"
        android:layout_column="4"
        android:layout_row="0"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="40dp"/>
    <View
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:background="#BDBDBD"
        android:layout_columnSpan="5"
        android:layout_row="1"/>
</GridLayout>