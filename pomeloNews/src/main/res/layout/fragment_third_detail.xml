<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_fragment_third_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="2dp"
        app:contentPadding="2dp">

        <ImageView
            android:id="@+id/iv_back_fragment_third_detail"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/ic_back_fragment_third_more" />

        <TextView
            android:id="@+id/tv_title_fragment_third_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLength="13"
            android:textColor="#656565"
            android:textSize="16sp"
            android:layout_gravity="center"/>
    </android.support.v7.widget.CardView>

    <WebView
        android:id="@+id/webview_fragment_third_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>