<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:animateLayoutChanges="true"
        android:id="@+id/toolbar_activity_first"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iv_icon_toolbar_activity_main"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_logo" />

        <TextView
            android:id="@+id/tv_title_toolbar_activity_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/toolbar_title"
            android:textColor="@color/colorToolBarTitle"
            android:textSize="25dp" />
    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_fragment_first"
        android:layout_width="match_parent"
        android:layout_height="@dimen/first_fragment_tablayout_height"
        android:background="@color/colorTabLayoutBackground"
        app:tabIndicatorHeight="1dp"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabSelectedTextColor="@color/colorFirstFragmentTabLayoutTextSelected"
        app:tabTextAppearance="@style/firstFragmentTabLayoutTextSize"
        app:tabTextColor="@color/colorFirstFragmentTabLayoutText" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginBottom="5dp"
        android:background="#D8D8D8"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_fragment_first"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
