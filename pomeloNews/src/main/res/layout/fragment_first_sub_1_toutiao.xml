<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativelayout_fragment_first_sub_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_pic_fragment_first_sub_1_toutiao"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp" />
        <TextView
            android:id="@+id/tv_title_fragment_first_sub_1_toutiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_pic_fragment_first_sub_1_toutiao"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/iv_pic_fragment_first_sub_1_toutiao"
            android:maxLength="42"
            android:paddingRight="5dp"
            android:textColor="#5D5D5D"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_source_fragment_first_sub_1_toutiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_pic_fragment_first_sub_1_toutiao"
            android:layout_alignLeft="@id/tv_title_fragment_first_sub_1_toutiao"
            android:layout_below="@id/tv_title_fragment_first_sub_1_toutiao"
            android:gravity="bottom"
            android:textColor="#C3C3C3"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_date_fragment_first_sub_1_toutiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_source_fragment_first_sub_1_toutiao"
            android:layout_alignRight="@id/tv_title_fragment_first_sub_1_toutiao"
            android:layout_below="@id/tv_title_fragment_first_sub_1_toutiao"
            android:layout_marginRight="10dp"
            android:gravity="bottom"
            android:textColor="#C3C3C3"
            android:textSize="12dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/linearlayout_1_fragment_first_sub_1">
        <TextView
            android:id="@+id/tv_title_1_fragment_sub_1_toutiao"
            android:layout_marginBottom="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#5D5D5D"
            android:textSize="16dp"
            android:maxLength="22"/>
        <LinearLayout
            android:layout_below="@+id/tv_title_1_fragment_sub_1_toutiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_margin="3dp"
                android:id="@+id/iv_pic_1_fragment_first_sub_1_toutiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:layout_margin="3dp"
                android:id="@+id/iv_pic_2_fragment_first_sub_1_toutiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:layout_margin="3dp"
                android:id="@+id/iv_pic_3_fragment_first_sub_1_toutiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#D8D8D8" />
</LinearLayout>
