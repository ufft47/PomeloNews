<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativelayout_fragment_fourth_about_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E56065">
        <ImageView
            android:id="@+id/iv_logo_fragment_fourth_about_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_logo_fragment_fourth" />
        <TextView
            android:id="@+id/tv_about_1_fragment_fourth_about_logo"
            android:layout_below="@id/iv_logo_fragment_fourth_about_logo"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="About"/>
        <TextView
            android:layout_below="@id/tv_about_1_fragment_fourth_about_logo"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V 1.0.0"/>
    </RelativeLayout>

    <TextView
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/tv_about_fragment_fourth_about_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativelayout_fragment_fourth_about_logo"
        android:layout_marginTop="10dp"
        android:text="@string/about"
        android:textColor="#717171"
        android:textSize="15sp" />
</RelativeLayout>